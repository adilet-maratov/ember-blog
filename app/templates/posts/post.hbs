<h2>Post options</h2>

<div class="form form-group">
  <form class="form-group">
    <div class="form-group">
        <label>Title</label>
      {{input value=model.title class='form-control'}}
    </div>
    <div class="form-group">
        <label>Body</label>
      {{input value=model.body class='form-control'}}
    </div>
    <div class="form-group">
        <label>Date</label>
      {{textarea value=model.date class='form-control'}}
    </div>
  </form>
</div>

<button class="btn btn-danger" {{action 'deletePost' model}}>Delete</button>